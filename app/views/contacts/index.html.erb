<% title "Contacts" %>

<div class="row">
  <div class="col-md-6">
    <%= link_to "New Contact", new_contact_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">

    <table class="table table-striped table-bordered">
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>

              <td>
              
                <h3><%= link_to h("#{contact.first_name} #{contact.last_name}"), contact %></h3>

                <div class="actions">
                  <%= link_to "Edit", edit_contact_path(contact) %> 
                  <%= link_to "Destroy", contact, method: :delete, data: { confirm: "Are you sure?" } %>
                </div>

              </td>        
            
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>